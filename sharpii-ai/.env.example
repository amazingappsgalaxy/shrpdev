# Sharpii.ai Environment Variables - Template
# Copy this file to .env.local and fill in your actual values

# Dodo Payments Configuration
DODO_PAYMENTS_API_KEY=your_dodo_api_key_here
DODO_WEBHOOK_SECRET=your_dodo_webhook_secret_here

# Dodo Product IDs - Create separate products for each plan
DODO_BASIC_MONTHLY_PRODUCT_ID=your_basic_monthly_product_id
DODO_BASIC_YEARLY_PRODUCT_ID=your_basic_yearly_product_id
DODO_CREATOR_MONTHLY_PRODUCT_ID=your_creator_monthly_product_id
DODO_CREATOR_YEARLY_PRODUCT_ID=your_creator_yearly_product_id
DODO_PROFESSIONAL_MONTHLY_PRODUCT_ID=your_professional_monthly_product_id
DODO_PROFESSIONAL_YEARLY_PRODUCT_ID=your_professional_yearly_product_id
DODO_ENTERPRISE_MONTHLY_PRODUCT_ID=your_enterprise_monthly_product_id
DODO_ENTERPRISE_YEARLY_PRODUCT_ID=your_enterprise_yearly_product_id

# Return URLs - Update for production
DODO_PAYMENTS_RETURN_URL=http://localhost:3003/app/dashboard?payment=success
DODO_PAYMENTS_CANCEL_URL=http://localhost:3003/?payment=cancelled#pricing-section

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3003
ADMIN_SECRET=your_admin_secret_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Better Auth Configuration
BETTER_AUTH_SECRET=your_better_auth_secret_here
BETTER_AUTH_URL=http://localhost:3003

# Google OAuth (optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# AI Services
RUNNINGHUB_API_KEY=your_runninghub_api_key
REPLICATE_API_TOKEN=your_replicate_token
OPENAI_API_KEY=your_openai_key
FAL_API_KEY=your_fal_api_key

# AWS S3 (Image Storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=your_aws_region
AWS_S3_BUCKET=your_s3_bucket_name

# Database (if using external)
DATABASE_URL=your_database_url

# Environment
NODE_ENV=development
NEXT_PUBLIC_DEBUG=false