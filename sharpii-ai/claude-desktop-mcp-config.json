{
  "mcpServers": {
    "playwright-brave": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--extension"
      ],
      "env": {
        "PLAYWRIGHT_BROWSER": "chromium",
        "PLAYWRIGHT_EXECUTABLE_PATH": "/Applications/Brave Browser.app/Contents/MacOS/Brave Browser",
        "PLAYWRIGHT_USER_DATA_DIR": "/tmp/brave-automation",
        "PLAYWRIGHT_HEADLESS": "false",
        "PLAYWRIGHT_ARGS": "--disable-web-security,--disable-features=VizDisplayCompositor,--disable-blink-features=AutomationControlled,--user-data-dir=/tmp/brave-automation"
      }
    }
  }
}